@model ProductManagementAPI.Models.User

<div class="mb-4">
    <a href="/admin/user" class="bg-blue-500 p-2 text-white w-fit rounded-sm hover:bg-blue-600 focus:bg-blue-600">Retour à la liste</a>
</div>
<h1 class="mb-4 text-2xl font-bold">Modification du produit n° @Model.Id</h1>
<form asp-action="Edit" method="post">
    <div class="gap-8 grid grid-cols-1">
        <div class="gap-2 flex flex-col">
            <label for="Id" class="font-bold">ID</label>
            <input type="text" id="Id" name="Id" required readonly value="@Model.Id" class="border-black bg-slate-200 p-2 rounded-sm border" />
        </div>
        <div class="gap-2 flex flex-col">
            <label for="Username" class="font-bold">Nom</label>
            <input type="text" id="Username" name="Username" required value="@Model.Username" class="border-black p-2 rounded-sm border" />
        </div>
        <div class="gap-2 flex flex-col">
            <label for="Email" class="font-bold">Nom</label>
            <input type="text" id="Email" name="Email" required value="@Model.Email" class="border-black p-2 rounded-sm border" />
        </div>
        <div>
            <button type="submit" class="bg-blue-500 p-2 text-white w-fit rounded-sm hover:bg-blue-600 focus:bg-blue-600">Modifier</button>
        </div>
    </div>
</form>