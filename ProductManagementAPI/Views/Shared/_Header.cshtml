@using Microsoft.AspNetCore.Identity

<p>@User.Identity.IsAuthenticated</p>
<header>
    <div class="px-4 py-2 mx-auto max-w-7xl">
        <div class="flex items-center justify-between">
            <nav>
                <ul class="gap-4 flex">
                    <li>
                        <a href="/admin/product">Produits</a>
                    </li>
                    <li>
                        <a href="/admin/user">Utilisateurs</a>
                    </li>
                </ul>
            </nav>
            <nav>
                <ul>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="/logout">Déconnexion</a>
                        </li>
                    } else 
                    {
                        <li>
                            <a href="/auth">Se connecter / S'enregister</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
    <div class="px-4 py-4 mx-auto max-w-7xl">
        <div class="flex items-center justify-between">
            <a href="/">
                <h1 class="font-bold">FYC - e-commerce</h1>
            </a>
            <nav>
                <ul>
                    <li class="gap-4 inline-flex">
                        <a href="/product">Produits</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>