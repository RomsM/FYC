@model ProductManagementAPI.Models.FrontProduct
<div class="mb-4">
    <a href="/product" class="w-fit rounded-sm bg-blue-500 p-2 text-white hover:bg-blue-600 focus:bg-blue-600">Retour à la liste</a>
</div>

<h1 class="mb-4 text-2xl font-bold">Visualisation du produit n° @Model.Id</h1>

<div class="grid-cols-1 grid gap-8">
    <div class="flex flex-col gap-2">
        <label for="Id" class="font-bold">ID</label>
        <input type="text" id="Id" name="Id" readonly value="@Model.Id" class="rounded-sm border border-black bg-slate-200 p-2"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="Name" class="font-bold">Nom</label>
        <input type="text" id="Name" name="Name" readonly value="@Model.Name" class="rounded-sm border border-black bg-slate-200 p-2"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="Description" class="font-bold">Description</label>
        <textarea id="Description" name="Description" readonly class="rounded-sm border border-black bg-slate-200 p-2">@Model.Description</textarea>
    </div>
    <div class="flex flex-col gap-2">
        <label for="Price" class="font-bold">Prix</label>
        <input type="number" id="Price" name="Price" step="0.01" readonly value="@Model.Price.ToString("G", System.Globalization.CultureInfo.InvariantCulture)" class="rounded-sm border border-black bg-slate-200 p-2"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="Stock" class="font-bold">Stock</label>
        <input type="number" id="Stock" name="Stock" readonly value="@Model.Stock" class="rounded-sm border border-black bg-slate-200 p-2"/>
    </div>
</div>