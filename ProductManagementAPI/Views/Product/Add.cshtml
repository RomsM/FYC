@model ProductManagementAPI.Models.FrontProduct
<div class="mb-4">
    <a href="/product" class="w-fit rounded-sm bg-blue-500 p-2 text-white hover:bg-blue-600 focus:bg-blue-600">Retour à la liste</a>
</div>
<h1 class="mb-4 text-2xl font-bold">Ajouter un produit</h1>

<form asp-action="Add" method="post">
    <div class="grid-cols-1 grid gap-8">
        <div class="flex flex-col gap-2">
            <label for="Name" class="font-bold">Nom</label>
            <input type="text" id="Name" name="Name" required class="rounded-sm border border-black p-2" />
        </div>
        <div class="flex flex-col gap-2">
            <label for="Description" class="font-bold">Description</label>
            <textarea id="Description" name="Description" required class="rounded-sm border border-black p-2"></textarea>
        </div>
        <div class="flex flex-col gap-2">
            <label for="Price" class="font-bold">Prix</label>
            <input type="number" id="Price" name="Price" step="0.01" required class="rounded-sm border border-black p-2" />
        </div>
        <div class="flex flex-col gap-2">
            <label for="Stock" class="font-bold">Stock</label>
            <input type="number" id="Stock" name="Stock" required class="rounded-sm border border-black p-2" />
        </div>
        <div>
            <button type="submit" class="w-fit rounded-sm bg-blue-500 p-2 text-white hover:bg-blue-600 focus:bg-blue-600">Ajouter</button>
        </div>
    </div>
</form>