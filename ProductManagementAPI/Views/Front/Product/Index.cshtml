@model List<ProductManagementAPI.Models.FrontProduct>

<section>
    <h1 class="mb-6 text-3xl font-bold">Nos Produits</h1>

    @if (Model == null || !Model.Any())
{
    <p class="text-gray-600">Aucun produit disponible pour le moment.</p>
}
else
{
    <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @foreach (var product in Model)
        {
        <div class="bg-white overflow-hidden rounded-lg shadow-md">
            <img src="https://via.placeholder.com/300x200"
                    alt="@product.Name"
                    class="h-48 w-full object-cover" />
